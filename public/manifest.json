{
  "manifest_version": 3,
  "name": "Intent",
  "version": "2.9",
  "description": "Your All-in-One Productivity Hub",
  "permissions": ["storage", "alarms", "offscreen", "tabs", "contextMenus"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Intent",
    "default_icon": {
      "16": "add.png",
      "32": "add.png",
      "48": "add.png",
      "128": "add.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "host_permissions": ["https://res.cloudinary.com/*"],
  "icons": {
    "16": "logo32.png",
    "32": "logo32.png",
    "48": "logo32.png",
    "128": "logo256.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
